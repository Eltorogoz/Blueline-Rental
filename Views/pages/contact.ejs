<%- include('../base', { body: `
    <div class="container mt-5">
      <h2 class="text-primary mb-3">Contact Us</h2>
      <p>We'd love to hear from you! Fill out the form below and our team will get back to you shortly.</p>
  
      <form id="contact-form" class="mt-4 p-4 border rounded bg-white">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter your full name" required>
        </div>
  
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
        </div>
  
        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <textarea class="form-control" id="message" rows="4" placeholder="Type your message" required></textarea>
        </div>
  
        <button type="submit" class="btn btn-primary w-100">Send Message</button>
        <div id="contact-status" class="mt-3 d-none"></div>
      </form>
    </div>
  ` }) %>
  
